{
  "name": "mailum-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --base /mailum/",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server --base /mailum/",
    "generate": "vite build --outDir dist/static --base /mailum/ && npm run build:server && node prerender",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postbuild": "purgecss --css dist/client/assets/*.css --content dist/client/index.html dist/client/assets/*.js --output dist/client/assets"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "5.3.0-alpha3",
    "classnames": "^2.3.2",
    "lunr": "^2.3.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1",
    "swiper": "^9.3.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "express": "^4.18.2",
    "sass": "^1.62.1",
    "vite": "^4.3.2",
    "vite-plugin-svgr": "^3.2.0"
  }
}
